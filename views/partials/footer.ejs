            $(document).ready(function() {
                $('#summernote').summernote({
                maximumImageFileSize: 400 * 1024,
                callbacks: {
                    onImageUploadError: function() {
                        alert("Maximum Image Size Limit Exceeded!");
                    }
                },
                tabsize: 2,
                height: 300,
                minHeight: 200, // set minimum height of editor
                maxHeight: 500,
                fontNames: ['Courier New', 'Montserrat'],
